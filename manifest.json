{
  "manifest_version": 3,
  "name": "Floating TradingView",
  "version": "1.0.0",
  "description": "A floating, resizable TradingView widget for multitasking traders",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "commands": {
    "toggle-widget": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle the floating TradingView widget"
    }
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Floating TradingView"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["widget.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
